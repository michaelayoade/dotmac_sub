# -*- text -*-
# FreeRADIUS default site configuration
# Handles authentication, authorization, and accounting

server default {
	listen {
		type = auth
		ipaddr = *
		port = 0
	}

	listen {
		type = acct
		ipaddr = *
		port = 0
	}

	authorize {
		filter_username
		preprocess
		suffix
		sql
		pap
	}

	authenticate {
		Auth-Type PAP {
			pap
		}
		Auth-Type CHAP {
			chap
		}
		Auth-Type MS-CHAP {
			mschap
		}
	}

	preacct {
		preprocess
		acct_unique
		suffix
	}

	accounting {
		sql
	}

	session {
		sql
	}

	post-auth {
		sql
		Post-Auth-Type REJECT {
			sql
		}
	}
}
